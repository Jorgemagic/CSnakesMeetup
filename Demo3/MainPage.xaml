<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo3.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="sa_10922.jpg"
                HeightRequest="500"
                Aspect="AspectFit"
                SemanticProperties.Description="the image" />

            <Button
                x:Name="SegmentBtn"
                WidthRequest="200"
                Text="Segment image" 
                SemanticProperties.Hint="Use SAM to segment elements of the image"
                Clicked="OnButtonClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
